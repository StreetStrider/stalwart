

body
{
	background: {{ bg }};
	color:      {{ fg }};
}

.accent .fg, .ac
{
	color: {{ accent }};
}
.accent .bg
{
	background: {{ accent }};
	color: {{ inv.fg }};
}
.inv
{
	color: {{ inv.fg }};
}

.hl
{
	background: {{ highlight }};
}

.sl
{
	background: {{ selection }};
}

.string span
{
	color: {{ string.fg }};
	background: {{ string.bg }};
}
.string span::before, .string span::after
{
	background: {{ string.bg__around }};
}

.comment span
{
	background: {{ comment.bg }};
}
